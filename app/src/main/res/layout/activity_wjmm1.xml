<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wjmm.Wjmm1">


  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar1"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="#03A9F4"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      app:navigationIcon="@mipmap/fh"
      app:title="重置密码" />

  <EditText
      android:id="@+id/edit_zh"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/yj"
      android:gravity="center"
      android:hint="请输入账号"
      android:ems="13"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/guideline7"
      app:layout_constraintHorizontal_bias="0.487"
      app:layout_constraintStart_toStartOf="@+id/guideline4"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.382" />

  <Button
      android:id="@+id/btn_xyb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="340dp"
      android:text="下一步"
      android:background="@drawable/btnyjwjmm"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/guideline7"
      app:layout_constraintHorizontal_bias="0.486"
      app:layout_constraintStart_toStartOf="@+id/guideline4" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.13625304" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.8759124" />

  <androidx.constraintlayout.widget.Barrier
      android:id="@+id/barrier4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:barrierDirection="left"
      tools:layout_editor_absoluteX="62dp"
      tools:layout_editor_absoluteY="110dp" />

</androidx.constraintlayout.widget.ConstraintLayout>