<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_height="match_parent"
    tools:context=".Register.Register">
<!--    注册账号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="账        号:"/>

        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/yj"
            android:layout_height="wrap_content"
            android:id="@+id/editRezh"/>


    </LinearLayout>
<!--     注册密码-->
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="密        码:"/>

        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/yj"
            android:layout_height="wrap_content"
            android:id="@+id/editRemm"/>


    </LinearLayout>
<!--    确认密码-->
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="确认密码:"/>

        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/yj"
            android:layout_height="wrap_content"
            android:id="@+id/editReqrmm"/>


    </LinearLayout>
<!--    性别-->
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="性        别:"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
               android:layout_width="wrap_content"
               android:textSize="20sp"
                android:layout_marginLeft="11dp"
                android:id="@+id/radio_nan"
               android:layout_height="wrap_content"
               android:text="男"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="20sp"
                android:id="@+id/radio_nv"
                android:layout_height="wrap_content"
                android:text="女"/>



        </RadioGroup>


    </LinearLayout>
<!--    爱好-->
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="游戏爱好:"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:id="@+id/Check_1"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="崩坏3"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Check_2"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="王者荣耀"/>


    </LinearLayout>
<!--    游戏爱好-->
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/Check_3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="98dp"
            android:text="战地1"
            android:textSize="20sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:id="@+id/check_4"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content"
            android:text="公主连结"/>

    </LinearLayout>
    
    
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:onClick="dl"
            android:background="@drawable/btnyj"
            android:layout_height="wrap_content"
            android:text="注册"/>
    </LinearLayout>

    
    


</LinearLayout>